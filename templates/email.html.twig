                <td valign="top" width="49%"><div style="margin:0 0 10px 0">Date: {{ 'now'|date('F j, Y') }}</div></td>
            </tr>
            <tr>
                <td valign="top" rowspan="4">From:&nbsp;&nbsp;&nbsp;</td>
                <td valign="top"><div style="border-bottom:1px solid black;margin:0 0 4px 0;padding:0 0 4px 0">{{ faculty_name }}</div><div style="margin:0 0 20px 0">Faculty/Staff Member’s Name</div></td>
